<odoo>
    <data>
        <record id="education_school_view_form" model="ir.ui.view">
            <field name="name">education.school.form</field>
            <field name="model">education.school</field>
            <field name="arch" type="xml">
                <form string="School Form">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="address"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="education_school_view_tree" model="ir.ui.view">
            <field name="name">education.school.tree</field>
            <field name="model">education.school</field>
            <field name="arch" type="xml">
                <tree string="School Tree">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="address"/>
                </tree>
            </field>
        </record>

        <record id="education_school_action" model="ir.actions.act_window">
            <field name="name">School</field>
            <field name="res_model">education.school</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="education_school_menu" action="education_school_action"
                  parent="education_student_menu_root" name="Schools" sequence="30"/>
    </data>
</odoo>